<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Category&nbsp;id</th>
                        <th>Category&nbsp;name</th>
                    </tr>
                </thead>
                <tbody>
                {{#each categories}}
                    <tr>
                        <td><a href="/categories?category={{id}}">{{id}}</a></td>
                        <td><a href="/categories?category={{id}}">{{id}}</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
		
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>